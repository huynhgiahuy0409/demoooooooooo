  "scripts": {
    "prestart": "cp ./app.config.json ./public/app.config.json",
    "start": "webpack serve --mode development --host 0.0.0.0",
    "start:dev": "cross-env DOTENV_CONFIG_PATH=.env.dev webpack serve --mode development --host 0.0.0.0",
    "start:local": "cross-env DOTENV_CONFIG_PATH=.env.local webpack serve --mode development --host 0.0.0.0",
    "build": "webpack --mode production",
    "postbuild": "cp ./app.config.json ./dist/app.config.json",
    "test": "jest",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,json}\""
  },
